    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>   <h4><b> &copy; @DateTime.Now.Year-Cloud-Based Restaurant Management System</b></h4></p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
